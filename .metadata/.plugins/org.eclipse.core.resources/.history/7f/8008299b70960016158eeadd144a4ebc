public class Student {
    
    private int iD;
    private int [] answer;
    
    public Student (int iD) {
        this.setID(iD);
    }
    
    public void setID(int iD) {
        this.iD = iD;
    }
    
    public void setAnswer(Question question, int answer) {
    	this.answer[answer] = 1;
    }
    
    public int getID() {
        return this.iD;
    }
    
    public int [] getAnswer() {
    	return this.answer;
    }
}