    public static void swap(int [] firstSwap) {
    	Random rand = new Random();
    	for (int i = (firstSwap.length - 1); i > 0; i--) {
    		int current = rand.nextInt(i + 1);
    		int temp1 = firstSwap[i];
    		firstSwap[i] = firstSwap[current];
    		firstSwap[current] = temp1;
    	}
    }
}